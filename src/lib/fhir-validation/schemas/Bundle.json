{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bundle",
  "type": "object",
  "required": ["resourceType", "type", "entry"],
  "properties": {
    "resourceType": { "const": "Bundle" },
    "type": { "type": "string" },
    "entry": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["resource", "request"],
        "properties": {
          "fullUrl": { "type": "string" },
          "resource": {
            "anyOf": [
              { "$ref": "#/definitions/Observation" },
              { "$ref": "#/definitions/MedicationStatement" },
              { "$ref": "#/definitions/DeviceUseStatement" },
              { "$ref": "#/definitions/DocumentReference" },
              { "$ref": "#/definitions/Composition" },
              { "$ref": "#/definitions/Condition" },
              { "$ref": "#/definitions/Procedure" },
              { "$ref": "#/definitions/GenericResource" }
            ]
          },
          "request": {
            "type": "object",
            "required": ["method", "url"],
            "properties": {
              "method": { "type": "string" },
              "url": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true,
  "definitions": {
    "Coding": {
      "type": "object",
      "required": ["system", "code"],
      "properties": {
        "system": { "type": "string" },
        "code": { "type": "string" },
        "display": { "type": "string" }
      },
      "additionalProperties": true
    },
    "CodeableConcept": {
      "type": "object",
      "required": ["coding"],
      "properties": {
        "coding": {
          "type": "array",
          "items": { "$ref": "#/definitions/Coding" }
        },
        "text": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Reference": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": { "type": "string" },
        "type": { "type": "string" },
        "display": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Quantity": {
      "type": "object",
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "unit": { "type": "string" },
        "system": { "type": "string" },
        "code": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Annotation": {
      "type": "object",
      "required": ["text"],
      "properties": { "text": { "type": "string" } },
      "additionalProperties": true
    },
    "Period": {
      "type": "object",
      "required": ["start"],
      "properties": {
        "start": { "type": "string" },
        "end": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Observation": {
      "type": "object",
      "required": ["resourceType", "status", "code", "subject"],
      "properties": {
        "resourceType": { "const": "Observation" },
        "status": { "type": "string" },
        "code": { "$ref": "#/definitions/CodeableConcept" },
        "subject": { "$ref": "#/definitions/Reference" },
        "effectiveDateTime": { "type": "string" },
        "valueQuantity": { "$ref": "#/definitions/Quantity" },
        "valueCodeableConcept": { "$ref": "#/definitions/CodeableConcept" },
        "valueString": { "type": "string" },
        "valueInteger": { "type": "integer" },
        "component": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["code"],
            "properties": {
              "code": { "$ref": "#/definitions/CodeableConcept" },
              "valueQuantity": { "$ref": "#/definitions/Quantity" },
              "valueCodeableConcept": { "$ref": "#/definitions/CodeableConcept" },
              "valueString": { "type": "string" },
              "valueInteger": { "type": "integer" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "MedicationStatement": {
      "type": "object",
      "required": ["resourceType", "status", "medicationCodeableConcept", "subject"],
      "properties": {
        "resourceType": { "const": "MedicationStatement" },
        "status": { "type": "string" },
        "medicationCodeableConcept": { "$ref": "#/definitions/CodeableConcept" },
        "subject": { "$ref": "#/definitions/Reference" }
      },
      "additionalProperties": true
    },
    "DeviceUseStatement": {
      "type": "object",
      "required": ["resourceType", "status", "subject", "device"],
      "properties": {
        "resourceType": { "const": "DeviceUseStatement" },
        "status": { "type": "string" },
        "subject": { "$ref": "#/definitions/Reference" },
        "device": { "$ref": "#/definitions/Reference" }
      },
      "additionalProperties": true
    },
    "DocumentReference": {
      "type": "object",
      "required": ["resourceType", "status", "subject", "date", "content"],
      "properties": {
        "resourceType": { "const": "DocumentReference" },
        "status": { "type": "string" },
        "subject": { "$ref": "#/definitions/Reference" },
        "date": { "type": "string" },
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["attachment"],
            "properties": {
              "attachment": {
                "type": "object",
                "required": ["contentType"],
                "properties": {
                  "contentType": { "type": "string" },
                  "url": { "type": "string" }
                },
                "additionalProperties": true
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "Composition": {
      "type": "object",
      "required": ["resourceType", "status", "type", "subject", "date", "title", "author"],
      "properties": {
        "resourceType": { "const": "Composition" },
        "status": { "type": "string" },
        "type": { "$ref": "#/definitions/CodeableConcept" },
        "subject": { "$ref": "#/definitions/Reference" },
        "date": { "type": "string" },
        "title": { "type": "string" },
        "author": {
          "type": "array",
          "items": { "$ref": "#/definitions/Reference" }
        }
      },
      "additionalProperties": true
    },
    "Condition": {
      "type": "object",
      "required": ["resourceType", "clinicalStatus", "verificationStatus", "code", "subject"],
      "properties": {
        "resourceType": { "const": "Condition" },
        "clinicalStatus": { "$ref": "#/definitions/CodeableConcept" },
        "verificationStatus": { "$ref": "#/definitions/CodeableConcept" },
        "code": { "$ref": "#/definitions/CodeableConcept" },
        "subject": { "$ref": "#/definitions/Reference" }
      },
      "additionalProperties": true
    },
    "Procedure": {
      "type": "object",
      "required": ["resourceType", "status", "code", "subject"],
      "properties": {
        "resourceType": { "const": "Procedure" },
        "status": { "type": "string" },
        "code": { "$ref": "#/definitions/CodeableConcept" },
        "subject": { "$ref": "#/definitions/Reference" }
      },
      "additionalProperties": true
    },
    "GenericResource": {
      "type": "object",
      "required": ["resourceType"],
      "properties": {
        "resourceType": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    }
  }
}
