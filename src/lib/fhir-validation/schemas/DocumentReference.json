{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocumentReference",
  "type": "object",
  "required": ["resourceType", "status", "subject", "date", "content"],
  "properties": {
    "resourceType": { "const": "DocumentReference" },
    "status": { "type": "string" },
    "type": { "$ref": "#/definitions/CodeableConcept" },
    "category": {
      "type": "array",
      "items": { "$ref": "#/definitions/CodeableConcept" }
    },
    "subject": { "$ref": "#/definitions/Reference" },
    "encounter": { "$ref": "#/definitions/Reference" },
    "author": {
      "type": "array",
      "items": { "$ref": "#/definitions/Reference" }
    },
    "date": { "type": "string" },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["attachment"],
        "properties": { "attachment": { "$ref": "#/definitions/Attachment" } },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true,
  "definitions": {
    "Reference": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": { "type": "string" },
        "type": { "type": "string" },
        "display": { "type": "string" }
      },
      "additionalProperties": true
    },
    "CodeableConcept": {
      "type": "object",
      "required": ["coding"],
      "properties": {
        "coding": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["system", "code"],
            "properties": {
              "system": { "type": "string" },
              "code": { "type": "string" },
              "display": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "text": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Attachment": {
      "type": "object",
      "required": ["contentType"],
      "properties": {
        "contentType": { "type": "string" },
        "url": { "type": "string" },
        "data": { "type": "string" },
        "size": { "type": "integer" },
        "hash": { "type": "string" },
        "title": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
