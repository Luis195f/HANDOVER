{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MedicationStatement",
  "type": "object",
  "required": ["resourceType", "status", "medicationCodeableConcept", "subject"],
  "properties": {
    "resourceType": { "const": "MedicationStatement" },
    "status": { "type": "string" },
    "medicationCodeableConcept": { "$ref": "#/definitions/CodeableConcept" },
    "subject": { "$ref": "#/definitions/Reference" },
    "encounter": { "$ref": "#/definitions/Reference" },
    "effectivePeriod": { "$ref": "#/definitions/Period" },
    "dateAsserted": { "type": "string" },
    "note": {
      "type": "array",
      "items": { "$ref": "#/definitions/Annotation" }
    }
  },
  "additionalProperties": true,
  "definitions": {
    "Coding": {
      "type": "object",
      "required": ["system", "code"],
      "properties": {
        "system": { "type": "string" },
        "code": { "type": "string" },
        "display": { "type": "string" }
      },
      "additionalProperties": true
    },
    "CodeableConcept": {
      "type": "object",
      "required": ["coding"],
      "properties": {
        "coding": {
          "type": "array",
          "items": { "$ref": "#/definitions/Coding" }
        },
        "text": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Reference": {
      "type": "object",
      "required": ["reference"],
      "properties": {
        "reference": { "type": "string" },
        "type": { "type": "string" },
        "display": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Period": {
      "type": "object",
      "required": ["start"],
      "properties": {
        "start": { "type": "string" },
        "end": { "type": "string" }
      },
      "additionalProperties": true
    },
    "Annotation": {
      "type": "object",
      "required": ["text"],
      "properties": { "text": { "type": "string" } },
      "additionalProperties": true
    }
  }
}
