{
  "expo": {
    "name": "handover-pro",
    "slug": "handover-pro",
    "owner": "enfermero1",
    "jsEngine": "hermes",
    "scheme": "handoverpro",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-system-ui",
      "expo-sqlite",
      "expo-secure-store",
      "expo-notifications",
      [
        "expo-audio",
        { "microphonePermission": "Permitir a Handover usar el micr贸fono." }
      ],
      [
        "expo-build-properties",
        { "android": { "javaVersion": "11" } }
      ],
      "expo-router"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "useNextNotificationsApi": true,
      "package": "com.anonymous.handoverpro"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Se requiere la c谩mara para escanear c贸digos QR en Handover.",
        "NSMicrophoneUsageDescription": "Grabaci贸n de notas de audio del turno",
        "NSUserTrackingUsageDescription": "Se usa para mejorar la experiencia del turno"
      }
    },
    "extra": {
      "FHIR_BASE_URL": "https://fhir.example.com",
      "STT_ENDPOINT": "http://192.168.0.16:8091/stt",
      "ENCRYPTION_NAMESPACE": "handover-pro",
      "ALLOW_ALL_UNITS": "1",
      "FEATURES": {
        "handover": {
          "showSBAR": "1",
          "showVitals": "1",
          "showOxygen": "1",
          "showMeds": "1",
          "showAttachments": "1",
          "enableAlerts": "1"
        }
      }
      /*  IMPORTANTE:
         Quitamos "extra.eas.projectId" a prop贸sito.
         As铆 EAS podr谩 re-vincular y escribir el GUID real
         (evitamos el 00000000-0000-... que te daba error). */
    }
  }
}

