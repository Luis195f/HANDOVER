    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/4341b7e0-da12-42a3-8452-745c68996e36"
    },
    "extra": {
      "FHIR_BASE_URL": "https://fhir.example.com",
      "STT_ENDPOINT": "http://192.168.0.16:8091/stt",
      "ENCRYPTION_NAMESPACE": "handover-pro",
      "ALLOW_ALL_UNITS": "1",
      "FEATURES": {
        "handover": {
          "showSBAR": "1",
