{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/src/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "jest-tests/**/*.ts"],
  "exclude": [
    "node_modules",
    "tests/**",
    "src/lib/__tests__/**",
    "src/lib/**/*.spec.ts",
    "src/lib/**/*.test.ts"
  ]
}
