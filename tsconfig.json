{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/src/*": ["src/*"]
    },
    "typeRoots": ["./types", "./src/types"],
    "noResolve": true
  },
  "include": [
    "App.tsx",
    "src/navigation/RootNavigator.tsx",
    "src/navigation/navigation.ts",
    "src/lib/node-crypto-shim.ts",
    "src/types/**/*.d.ts",
    "types/**/*.d.ts"
  ]
}
