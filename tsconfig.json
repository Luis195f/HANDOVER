{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/src/*": ["src/*"],
      "expo-audio": ["src/lib/expo-audio-wrapper"]
    },
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tests/**"
  ]
}
